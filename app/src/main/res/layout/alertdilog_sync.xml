<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="  #ffd990"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:background="#ff3333"
    android:layout_height="100dp">

    <TextView
        android:textColor="#ffffff"
        android:id="@+id/tital_dilog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="Sync Data One By one "
        android:textSize="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="KYC :"
            android:textColor="#020000"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/kyc_dilog_Downlod"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@android:drawable/stat_sys_download" />

        <ImageButton
            android:id="@+id/kyc_dilog_Upload"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@android:drawable/stat_sys_upload" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Beneficiery :"
            android:textColor="#020000"
            android:textSize="18dp" />

        <ImageButton
            android:id="@+id/beneficiery_dilog_Download"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@android:drawable/stat_sys_download" />

        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/beneficiery_dilog_Upload"
            android:src="@android:drawable/stat_sys_upload" />
    </LinearLayout>



</LinearLayout>